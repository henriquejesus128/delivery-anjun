// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String 
  orders Order[]
  @@map("users")
}

model Product {
  id String @id @default(uuid())
  name String @unique
  order Order @relation(fields: [orderId], references: [id])
  orderId String
  @@map("products")
}

model Address {
  id String @id @default(uuid())
  street String
  number String
  complement String
  city String
  state String
  zipCope String
  customer Customer?
  @@map("adresses")
}

model Customer{
  id String @id @default(uuid())
  name String
  orders Order[]
  address Address @relation(fields: [addressId], references: [id])
  addressId String @unique
  @@map("customers")
}

model Order {
  id String @id @default(uuid())
  status String
  customer Customer @relation(fields: [customersId], references: [id])
  customersId String
  user User @relation(fields: [userId], references: [id])
  userId String @unique
  products Product[]
  @@map("orders")
}